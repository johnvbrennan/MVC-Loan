@model Visma.Loan.MvcServices.ViewModels.HomeLoanViewModel
@{
    ViewBag.Title = "Home Page";
} 
@section scripts{
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="/lib/jquery-ui/jquery-ui.min.js"></script>

    <script type="text/javascript">
        $(function () {
            // Hookup textboxes with date-picker class to have jquery calendar
            $('.datepicker').datepicker({ dateFormat: 'dd/mm/yy' });
        })
    </script>
}
<link rel="stylesheet" type="text/css" href="/lib/jquery-ui/themes/base/jquery-ui.min.css"/>
<div id="search-form" class="col-md-12">
    <h2>New Home Loan</h2>
    @using (Html.BeginForm())
    {
        <p class="alert alert-info">All fields are <strong>required</strong>.</p>
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Amount)
            @Html.TextBoxFor(m => m.Amount, new {@class = "form-control", placeholder = "Loan Amount", autocomplete = "off", autofocus = "autofocus"})
            @Html.ValidationMessageFor(m => m.Amount, String.Empty, new {@class = "text-muted"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.InterestRate)
            @Html.TextBoxFor(m => m.InterestRate, new {@class = "form-control", placeholder = "Interest Rate %", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.InterestRate, String.Empty, new {@class = "text-muted"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Term)
            @Html.TextBoxFor(m => m.Term, new {@class = "form-control", placeholder = "Loan Duration in Years", autocomplete = "off"})
            @Html.ValidationMessageFor(m => m.Term, String.Empty, new {@class = "text-muted"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstRepaymentDate)
            @Html.EditorFor(model => model.FirstRepaymentDate, new {htmlAttributes = new {@class = "form-control datepicker", maxlength = 10, placeholder = "eg 15/03/2017", autocomplete = "off"}})
            @Html.ValidationMessageFor(m => m.FirstRepaymentDate, String.Empty, new {@class = "text-muted"})
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-success"/> 
        </div> 
    }
</div>  